<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} %-5level [%thread] %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="WARN">
        <appender-ref ref="STDOUT" />
    </root>

    <logger name="org.refactoringminer" level="INFO" />

    <!-- Suppress noisy logs -->
    <logger name="org.eclipse.jetty" level="WARN" />
    <logger name="org.eclipse.jetty.util.log" level="WARN" />
    <logger name="spark.embeddedserver" level="WARN" />
    <logger name="spark.staticfiles" level="WARN" />
    <logger name="spark.http.matching.MatcherFilter" level="WARN" />
    <logger name="org.kohsuke.github" level="WARN" />
</configuration>
